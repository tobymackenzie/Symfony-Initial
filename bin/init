#!/usr/bin/env php
<?php
set_time_limit(0);

$rootDir = exec('pwd');
$vendorDir = $rootDir.'/vendor';

if(!is_dir($vendorDir)){
	mkdir($vendorDir, 0777, true);
}
if(!is_dir($vendorDir.'/bundles')){
	mkdir($vendorDir.'/bundles', 0777, true);
}
if(!is_dir($vendorDir.'/bundles/TJM')){
	mkdir($vendorDir.'/bundles/TJM', 0777, true);
}
if(!is_dir($vendorDir.'/bundles/TJM/Shared')){
	exec("git clone git://github.com/tobymackenzie/Symfony-Shared.git {$vendorDir}/bundles/TJM/Shared");
}

