## set permissions log and cache directories
#-# must run as root
if [ -d app/cache ]; then
	rm -rf app/cache/*
else
	mkdir app/cache
fi
if [ -d app/logs ]; then
	rm -rf app/logs/*
else
	mkdir app/logs
fi

APACHEUSER=`ps aux | grep -E '[a]pache|[h]ttpd' | grep -v root | head -1 | cut -d\  -f1`

##--option 1: ACL with chmod +a
chmod +a "$APACHEUSER allow delete,write,append,file_inherit,directory_inherit" app/cache app/logs
chmod +a "`whoami` allow delete,write,append,file_inherit,directory_inherit" app/cache app/logs

##--option 2: ACL, older systems
# setfacl -R -m u:$APACHEUSER:rwX -m u:`whoami`:rwX app/cache app/logs
# setfacl -dR -m u:$APACHEUSER:rwX -m u:`whoami`:rwX app/cache app/logs

##--option 3: non ACL
#-# add 'umask(0000);' to app.php and app_dev.php
