#!/usr/bin/env php
<?php
//--install composer if not installed
if(!file_exists('composer.phar')){
	exec('curl -sS https://getcomposer.org/installer | php');
}

//--gather arguments
$arguments = '';
for($i = 1; $i < $argc; ++$i){
	$arguments .= " {$argv[$i]}";
}

//--run composer with arguments
passthru('php composer.phar' . $arguments);
